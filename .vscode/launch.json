    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'co2_compiler'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=co2_compiler",
                    "--package=co2_compiler"
                ],
                "filter": {
                    "name": "co2_compiler",
                    "kind": "bin"
                }
            },
            "args": [
                "sample.co2",
                "output/result.bin"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'co2_compiler'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=co2_compiler",
                    "--package=co2_compiler"
                ],
                "filter": {
                    "name": "co2_compiler",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}